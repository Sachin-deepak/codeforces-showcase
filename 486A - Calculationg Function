#include <stdio.h>
long long int SUM(long long int n,long long int a,long long int b)
{
  return (n*(a + (n-1)));
}
int main()
{
  long long int inp,i,num,sum=0;
  long long int even,odd;
  scanf("%lld",&inp);
  if (inp%2==0)
  {
    even=SUM(inp/2,2,inp);
    odd=SUM(inp/2,1,inp-1);
  }
  else
  {
    even=SUM(inp/2,2,inp-1);
    odd=SUM((inp+1)/2,1,inp);
  }
  printf("%lld",even-odd);
}
